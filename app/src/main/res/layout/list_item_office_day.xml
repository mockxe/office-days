<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parentOfficeDay"
    >

    <TextView
        android:id="@+id/txtOfficeDayWeekday"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Montag"

        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        />

    <TextView
        android:id="@+id/txtOfficeDayDate"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="01.01.1970"

        android:layout_marginStart="16dp"

        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toEndOf="@+id/txtOfficeDayWeekday"
        app:layout_constraintBottom_toBottomOf="@+id/txtOfficeDayWeekday"
        app:layout_constraintTop_toTopOf="@+id/txtOfficeDayWeekday" />

    <View
        android:id="@+id/divider1"

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_marginTop="16dp"

        android:background="?attr/dividerHorizontal"
        app:layout_constraintTop_toBottomOf="@+id/txtOfficeDayWeekday"
        />

</androidx.constraintlayout.widget.ConstraintLayout>